{
    "title": "Screenshots from HTML",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "html": {
            "sectionCaption": "Direct input",
            "title": "HTML Input",
            "type": "string",
            "description": "HTML that will be rendered",
            "editor": "textarea",
            "prefill": ""
        },
        "kvStoreId": {
            "sectionCaption": "Key-value store input",
            "title": "Key-value store ID",
            "type": "string",
            "description": "ID of KV store with input data",
            "editor": "textfield",
            "prefill": ""
        },
        "kvStorePrefix": {
            "title": "Key-value store prefix",
            "type": "string",
            "description": "If provided, only key-value pairs with given key prefix will be used",
            "editor": "textfield",
            "prefill": ""
        },
        "datasetId": {
            "sectionCaption": "Dataset input",
            "title": "Dataset ID",
            "type": "string",
            "description": "ID of dataset with input data",
            "editor": "textfield",
            "prefill": ""
        },
        "datasetOutput": {
            "title": "Output for dataset data",
            "type": "string",
            "editor": "select",
            "description": "Select where will be data from dataset source saved",
            "enum": [
                "dataset",
                "kv"
            ],
            "enumTitles": [
                "Dataset",
                "Key-Value Store"
            ]
        },
        "datasetHtmlField": {
            "title": "Dataset HTML field",
            "type": "string",
            "description": "Name of field, that contains HTML of a site",
            "editor": "textfield",
            "prefill": ""
        },
        "datasetKeyFields": {
            "title": "Dataset key fields",
            "type": "array",
            "description": "Name of fields, that contains keys. Fields will be concatenated with '_' and used as a output image name.",
            "editor": "stringList",
            "prefill": [""]
        },
        "imageQuality": {
            "sectionCaption": "Other settings",
            "title": "JPEG quality",
            "type": "integer",
            "description": "Quality of output image. Has to be in range 1-100.",
            "default": 80,
            "maximum": 100,
            "minimum": 1
        },
        "viewportWidth": {
            "title": "Viewport width",
            "type": "integer",
            "description": "Viewport width",
            "default": 1920,
            "minimum": 1
        },
        "viewportHeight": {
            "title": "Viewport height",
            "type": "integer",
            "description": "Viewport height",
            "default": 1080,
            "minimum": 1
        }
    }
}
